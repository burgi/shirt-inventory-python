{
  "name": "Python + Poetry",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "postCreateCommand": "setup_venv.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python"
      }
    }
  }
}