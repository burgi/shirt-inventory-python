{
  "name": "Python + Poetry",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/poetry:1": {}
  },
  "postCreateCommand": "poetry install",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python"
      }
    }
  }
}